<?xml version="1.0" encoding="UTF-8"?>
<project>
  <build>
    <plugins>
      <plugin>
        <artifactId>smaller-maven-plugin</artifactId>
        <configuration>
          <files>
            <directory>src/test/resources/dir</directory>
            <includes>
              <include>**/*.txt</include>
            </includes>
            <excludes>
              <exclude>**/*.bin</exclude>
            </excludes>
          </files>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
